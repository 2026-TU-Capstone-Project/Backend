# ============================================
# MySQL Database Configuration
# Used when MySQL container creates database and user
# ============================================
MYSQL_ROOT_PASSWORD=1234
MYSQL_DATABASE=capstone_db
MYSQL_USER=user
MYSQL_PASSWORD=password
MYSQL_PORT=3307

# ============================================
# Spring Boot Application Configuration
# Used when Spring Boot app connects to MySQL
# ============================================
# Host: 'mysql' in Docker environment, 'localhost' for local development
SPRING_DATASOURCE_HOST=localhost
SPRING_DATASOURCE_DATABASE=capstone_db
SPRING_DATASOURCE_USERNAME=user
SPRING_DATASOURCE_PASSWORD=password
SERVER_PORT=8080

# ============================================
# JPA Configuration
# ============================================
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_SPRING_WEB=INFO
LOG_LEVEL_HIBERNATE_SQL=DEBUG
SPRING_DATASOURCE_PORT=3307
